\newcommand{\juicio}[0]{\Gamma \triangleright\,}
\newcommand{\juicioU}[1]{\Gamma, #1 \triangleright\, }
\newcommand{\juicioVacio}[0]{\emptyset \triangleright}
\newcommand{\juicioSet}[1]{\{ #1 \} \triangleright }
\DeclareMathOperator{\iif}{if}
\DeclareMathOperator{\tthen}{then}
\DeclareMathOperator{\eelse}{else}
\newcommand{\ITE}[3]{ \iif \, #1 \, \tthen \, #2 \, \eelse \, #3 }
% variable tipo cuerpo
\newcommand{\labsApp}[3]{ \lambda #1 : #2 . \,\, #3 }
\newcommand{\labs}[5]{ \lambda #1 : #2 . \, #3 : #4 \rightarrow #5}

\newcommand{\TTTrue}[1]{ \hypo[]{\checkmark} \infer1[(T - True)]{#1} }
\newcommand{\TTFalse}[1] { \hypo[]{\checkmark} \infer1[(T - False)]{#1}}
\newcommand{\TTVar}[1] { \hypo[]{\checkmark} \infer1[(T - Var)]{#1}}
\newcommand{\TTZero}[1]{\hypo[]{\checkmark} \infer1[(T - Zero)]{#1}}

\def\TTrue{(T - True)}
\def\TFalse{(T - False)}
\def\TZero{(T - Zero)}
\def\TIsZero{(T - IsZero)}
\def\TIf{(T - If)}
\def\TSucc{(T - Succ)}
\def\TApp{(T - App)}
\def\TAbs{(T - Abs)}
\def\TVar{(T - Var)}

